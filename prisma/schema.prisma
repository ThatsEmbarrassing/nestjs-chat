datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @unique @default(autoincrement())
  name         String
  passwordHash String
  refreshToken String?
  Message      Message?
  ChatUsers    ChatUser?
}

model ChatUserRole {
  id       Int       @id @default(autoincrement())
  name     String
  ChatUser ChatUser?
}

model Chat {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())
  ChatUsers ChatUser?
}

model ChatUser {
  id Int @id @unique @default(autoincrement())

  chat   Chat @relation(fields: [chatId], references: [id])
  chatId Int  @unique

  member   User @relation(fields: [memberId], references: [id])
  memberId Int  @unique

  role   ChatUserRole @relation(fields: [roleId], references: [id])
  roleId Int          @unique
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}
